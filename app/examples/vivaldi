" Options
set adblocker=update
set cache=full
set devtoolsposition=vsplit
set favicons=30day
set mintabwidth=0
set permissioncamera=ask
set permissiondisplaycapture=ask
set permissionmediadevices=allow
set permissionmicrophone=ask
set permissionpersistentstorage=allow
set redirecttohttp
set splitright
set suspendonrestore=none
set tabreopenposition=previous
set windowtitle=title

" Search Engines
set search=https://www.bing.com/search?q=%s

" Mappings
nmap <F3> <toSearchMode><nextSearchMatch>
nmap <S-F3> <toSearchMode><previousSearchMatch>
nmap <C-g> <toSearchMode><nextSearchMatch>
nmap <C-G> <toSearchMode><previousSearchMatch>
nmap <C-E> <:extensions>
nmap <C-h> <:history>
nmap <C-H> <:history>
nmap <C-F1> <:open https://vieb.dev/cheatsheet>
nmap <C-p> <:print>
nmap <C-I> <:devtools>
nmap <C-J> <:devtools>
nmap <C-V> <openFromClipboard>
nmap <C-F11> <:set guinavbar!>
nmap <C-+> <zoomIn>
nmap <C-=> <zoomIn>
nmap <C--> <zoomOut>
nmap <C-k0> <zoomReset>
nmap <C-*> <zoomReset>
nmap <C-j> <:downloads>
nmap <C-D> <:downloads>
nmap <C-Tab> <toLastUsedTab>
nmap <C-1> <:b 0>
nmap <C-2> <:b 1>
nmap <C-3> <:b 2>
nmap <C-4> <:b 3>
nmap <C-5> <:b 4>
nmap <C-6> <:b 5>
nmap <C-7> <:b 6>
nmap <C-8> <:b 7>
nmap <C-9> <:b -1>
nmap <C-k1> <:b 0>
nmap <C-k2> <:b 1>
nmap <C-k3> <:b 2>
nmap <C-k4> <:b 3>
nmap <C-k5> <:b 4>
nmap <C-k6> <:b 5>
nmap <C-k7> <:b 6>
nmap <C-k8> <:b 7>
nmap <C-k9> <:b -1>
nmap <C-z> <reopenTab>
nmap <C-T> <reopenTab>
nmap <F8> <toExploreMode>
nmap <C-l> <toExploreMode>
nmap <C-r> <reload>
nmap <C-R> <reloadWithoutCache>
nmap <C-k> <toExploreMode><BS>
nmap <C-e> <toExploreMode><BS>
nmap <C-f> <toSearchMode>
nmap <BS> <backInHistory>
nmap <C-Left> <backInHistory>
nmap <A-Left> <backInHistory>
nmap <Esc> <stopLoadingPage>
nmap <C-s> :write<Space>

smap <F3> <nextSearchMatch>
smap <C-g> <nextSearchMatch>
smap <S-F3> <previousSearchMatch>
smap <C-G> <previousSearchMatch>

