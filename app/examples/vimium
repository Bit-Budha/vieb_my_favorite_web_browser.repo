" Options
set adblocker=update
set downloadmethod=confirm
set mintabwidth=250
set norestoretabs
set redirecttohttp
set tabreopenposition=previous
set windowtitle=title
set search=https://google.com/search?q=%s
set searchwords=w~https://www.wikipedia.org/w/index.php?title=Special:Search&search=%s

" Mappings
nmap d <scrollPageDownHalf>
nmap u <scrollPageUpHalf>
nmap zH <scrollPageLeft>
nmap zL <scrollPageRight>
nmap yy <pageToClipboard>
nmap yf <p.start><startFollowCurrentTab>
nmap v <p.start><p.startVisualSelect>
nmap o <toExploreMode>
nmap O <openNewTab><toExploreMode>
nmap T <toCommandMode>buffer<Space>
nmap g0 <:buffer 0>
nmap g$ <:buffer 999>
nmap ge <toExploreMode><End>
nmap gE <openNewTab><toExploreMode>
nmap x <:close>
nmap X <reopenTab>
nmap <A-p> <:pin>
nmap <A-m> <:mute>
nmap yt <openNewTabWithCurrentUrl><CR>
nmap ? <:help>

" vim: ft=vim
